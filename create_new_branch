#!/bin/bash

# Create and switch to a new branch named "new_branch"
git checkout -b new_branch

# Create the "id.txt" file and add the lines
echo "ID = 000000000" > id.txt
echo "COURSE = CMPSC311" >> ID.txt

# Add the file to the staging area
git add ID.txt

# Commit the changes
git commit -m "Add new ID and COURSE info"

# Output the branch name and the file contents
echo "Created and switched to branch 'new_branch'."
echo "Contents of id.txt:"
cat id.txt

# Switch back to the original branch 
git checkout main  

echo "Switched back to the 'main' branch" 
